<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
     "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
    <constant name="struts.devMode" value="false">  
    </constant>
    <package name="Actions"  extends="struts-default,json-default">
        <action name="login" class="Actions.ActionLogin" method="login">
            <result name="success" type="redirectAction">
                <param name="actionName">menu</param>
            </result>
            <result name="error">/Vistas/respuesta.jsp</result>
            <result name="input">/Vistas/Login.jsp</result>
        </action>
        <action name="logout" class="Actions.ActionLogin" method="logout">
            <result name="success">/Vistas/Login.jsp</result>
            <result name="login">/Vistas/Login.jsp</result>
        </action>
           <!--
        Este action menu se encargara de mostrar la pagina menu.jsp si es que el session existe un usuario
        si no entonces mostrara la pagina login.jsp
        -->
        <action name="menu" class="Actions.ActionLogin" method="menu" >
            <result name="success">/Vistas/Menu.jsp</result>
            <result name="login">/Vistas/Login.jsp</result>
        </action>
        <action name="proveedor"  class="Actions.ActionProveedor" method="execute">
            <result name="lista">/Vistas/ListarProveedor.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
            <result name="editar">/Vistas/ActualizarProveedor.jsp</result>
        </action>
        <action name="mostrarDistritos"  class="Actions.ActionProveedor" method="mostrarDistritos">
            <result name="lista">/Vistas/RegistrarProveedor.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
        </action>
        <action name="BuscarProveedor" class="Actions.ActionProveedor" method="BuscarProveedor">
            <result name="lista">/Vistas/BuscarProveedor.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
            <result name="login">/Vistas/Login.jsp</result>
        </action>
        <action name="ListarProducto" class="Actions.ActionProducto" method="ListarProducto">
            <result name="lista">/Vistas/ListarProducto.jsp</result>
            <result name="login">/Vistas/Login.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
        </action>
        <action name="ListarCategoria" class="Actions.ActionProducto" method="ListarCategoria">
            <result name="lista" type="json"></result>
            <result name="error">/Vistas/respuesta.jsp</result>
        </action>
        <action name="RegistrarProducto" class="Actions.ActionProducto" method="RegistrarProducto">
            <result name="lista">/Vistas/ListarProducto.jsp</result>
            <result name="input">/Vistas/RegistrarProducto.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
        </action>
        <action name="EliminarProducto" class="Actions.ActionProducto" method="EliminarProducto">
            <result name="lista">/Vistas/ListarProducto.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
        </action>
        <action name="EditarProducto" class="Actions.ActionProducto" method="EditarProducto">
            <result name="lista">/Vistas/ListarProducto.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
            <result name="input">/Vistas/ActualizarProducto.jsp</result>
        </action>
        
        <action name="ActionProductoJson" class="Actions.ActionProductoJson" method="EditarProductoJSONAJAX">
            <result name="success" type="json">
                <param name="excludeProperties">texto</param>
                <param name="excludeNullProperties">true</param>
            </result>
        </action>
        
        <action name="ListarProveedor" class="Actions.ActionProveedor" method="ListarProveedor">
            <result name="lista">/Vistas/ListarProveedor.jsp</result>
            <result name="error">/Vistas/Respuesta.jsp</result>
            <result name="login">/Vistas/Login.jsp</result>
        </action>
        <action name="ObtenerProducto" class="Actions.ActionProducto" method="ObtenerProducto">
            <result name="editar">/Vistas/ActualizarProducto.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
        </action>
        <action name="MostrarCodigoProveedor" class="Actions.ActionProducto" method="MostrarCodigoProveedor">
            <result name="lista">/Vistas/RegistrarProducto.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
        </action>
        <action name="agregarproducto">
            <result>/Vistas/RegistrarProducto.jsp</result>
        </action>
        <action name="agregarusuario">
            <result>/Vistas/RegistrarUsuario.jsp</result>
        </action>
        <action name="inicio" >
            <result>/Vistas/Menu.jsp</result>
        </action>
        <action name="ListarTipoUsuario" class="Actions.ActionUsuario" method="ListarTipoUsuario">
            <result name="success" type="json"></result>
            <result name="error">/Vistas/respuesta.jsp</result>
        </action>
        <action name="RegistrarUsuario" class="Actions.ActionUsuario" method="RegistrarUsuario">
            <result name="registrar">/Vistas/ListarUsuarios.jsp</result>
            <result name="input">/Vistas/RegistrarUsuario.jsp</result>     
            <result name="error">/Vistas/respuesta.jsp</result>
        </action>
        <action name="ListarUsuario" class="Actions.ActionUsuario" method="ListarUsuario">
            <result name="lista">/Vistas/ListarUsuarios.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
            <result name="login">/Vistas/Login.jsp</result>
        </action>
         <action name="BuscarUsuario" class="Actions.ActionUsuario" method="BuscarUsuario">
            <result name="success">/Vistas/ActualizarUsuario.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
        </action>
         <action name="EditarUsuario" class="Actions.ActionUsuario" method="EditarUsuario">
            <result name="success">/Vistas/ListarUsuarios.jsp</result>
            <result name="input">/Vistas/ActualizarUsuario.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
        </action>
        <action name="EliminarUsuario" class="Actions.ActionUsuario" method="EliminarUsuario">
            <result name="success">/Vistas/ListarUsuarios.jsp</result>
            <result name="error">/Vistas/respuesta.jsp</result>
        </action>
    </package>
</struts>
